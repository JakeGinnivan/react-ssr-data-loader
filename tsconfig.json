{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": true,
        "strict": true,
        "inlineSourceMap": false,
        "inlineSources": false,
        "sourceRoot": "/",
        "noEmit": true,
        "jsx": "react",
        "emitDecoratorMetadata": false,
        "experimentalDecorators": false,
        "allowSyntheticDefaultImports": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "declaration": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
